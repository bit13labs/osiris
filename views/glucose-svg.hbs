<svg width="400" height="300" xmlns="http://www.w3.org/2000/svg">
 <g>
  <rect fill="{{background}}" id="canvas_background" height="302" width="402" y="-1" x="-1"/>
  <g display="none" overflow="visible" y="0" x="0" height="100%" width="100%" id="background-canvas">
   <rect fill="url(#gridpattern)" stroke-width="0" y="0" x="0" height="100%" width="100%"/>
  </g>
 </g>
 <g>
  <text font-weight="bold" xml:space="preserve"
		text-anchor="middle" font-family="'Roboto', 'Helvetica', sans-serif"
		font-size="155" id="glucose" y="180" x="200" stroke-width="0" stroke="#000"
		fill="{{foreground}}">{{glucose}}</text>
		{{#if time_ago}}
		<text font-weight="bold" xml:space="preserve"
			text-anchor="middle" font-family="Roboto, Helvetica, sans-serif"
			font-size="32" id="time_ago" y="230" x="200" stroke-width="0" stroke="{{foreground}}"
			fill="{{foreground}}">{{time_ago}}</text>
		{{/if}}
 </g>
</svg>
